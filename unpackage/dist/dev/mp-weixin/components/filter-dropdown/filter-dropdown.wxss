.menu-box.hide .u-dropdown__content {
  display: none;
}
.menu-box {
  background-color: #ffffff;
  font-size: 24rpx;
}
.menu-box .container .filter-item .title:before {
  content: "";
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  border: 4rpx solid #57bda2;
  margin-right: 10rpx;
}
.menu-box .container .filter-item .regional {
  width: 90%;
  margin: 0 auto;
}
.menu-box .container .filter-item .regional .zf {
  font-size: 28rpx;
  font-weight: bold;
}
.menu-box .container .filter-item .school .tx-left {
  width: 30%;
  position: relative;
  background: #f5f5f5;
}
.menu-box .container .filter-item .school .tx-right {
  flex: 1;
  position: relative;
  height: 300px;
}
.menu-box .container .filter-item .tx-right .active {
  background: #fafafa;
  color: #57bda2;
}
.menu-box .container .filter-item .text {
  padding-left: 20px;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
}
.menu-box .container .filter-item .text.active {
  font-weight: 600;
}
.menu-box .container .filter-item .label {
  background-color: #f4f4f5;
  border-radius: 50rpx;
  padding: 2px 16rpx;
  color: #666;
}
.menu-box .container .filter-item .more {
  padding: 0 20px;
}
.menu-box .container .filter-item .more .more-title {
  font-size: 14px;
  font-weight: 700;
  position: relative;
}
.menu-box .container .filter-item .more .name {
  display: inline-block;
  margin-right: 10px;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 2px 10px;
  color: #666;
}
.menu-box .container .filter-item .more .pvp-grade {
  display: inline-block;
  margin-right: 10px;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 2px 10px;
  margin-top: 10px;
  color: #666;
  width: 60%;
  background: none;
}
.menu-box .container .filter-item .more .pvp-grade .input {
  display: inline-block;
  width: 100px;
  height: 24px;
  border-radius: 22px;
  border: 1px solid #57bda2;
  margin-left: 10px;
  padding: 0 10px;
}
.menu-box .container .filter-item .label.active, .menu-box .container .filter-item .name.active {
  background-color: #57bda2;
  color: #ffffff;
}
.menu-box .container .footer-btn {
  text-align: right;
  padding-bottom: 20px;
  padding-right: 20px;
}
.menu-box .container .footer-btn .btn {
  display: inline-block;
  line-height: 26px;
  padding: 0 15px;
  border-radius: 15px;
}
.menu-box .container .footer-btn .btn-delete {
  background-color: #f5f5f5;
  margin-right: 10px;
}
.menu-box .container .footer-btn .btn-confirm {
  background-color: #57bda2;
  color: #fff;
}
.menu-box .margin-bottom-20 {
  margin-bottom: 20rpx;
}

